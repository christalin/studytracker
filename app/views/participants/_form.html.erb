<%= simple_form_for(@participant, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
  
 
  <%= f.input :partname, required: true, label: false, placeholder: " Participant Name", input_html: {class: "form-control"} %>
  <%= f.input :gender, required: true, label: false, placeholder: "Gender", input_html: {class: "form-control"} %>
  <%= f.date_select :dob, required: true, label: false, placeholder: "DOB", input_html: {class: "form-control datepicker"} %>

  <%= f.input :address, required: true, label: false, placeholder: "Address", input_html: {class: "form-control"} %>


  <!--<%= debug @allstudy %>-->

  <%= f.submit "Save", class: "btn btn-primary btn-block" %>
  
<% end %>

