<div class="responstable">
<table class="table table-striped table-bordered">    
  <thead>
    <tr>
      <th>TITLE</th>
      <th>PRINCIPAL INVESTIGATOR</th>
      <th>STATUS</th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.title %></td>
        <td><%= study.principal_investigator %></td>
        <td><%= study.status %></td>
        <td><%= link_to "edit", edit_study_path(study) %></td>
        <td><%= link_to "x", study_path(study), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
